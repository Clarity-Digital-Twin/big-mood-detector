# Big Mood Detector Configuration
# Copy this file to .env and update values as needed

# Environment: local, staging, production
ENVIRONMENT=local

# API Configuration
PROJECT_NAME="Big Mood Detector"
VERSION="0.1.0"
API_V1_STR="/api/v1"

# Paths (will be created if they don't exist)
MODEL_WEIGHTS_PATH="model_weights/xgboost/converted"
OUTPUT_DIR="output"
UPLOAD_DIR="uploads"
TEMP_DIR="temp"

# File Processing
MAX_FILE_SIZE=104857600  # 100MB in bytes
ALLOWED_EXTENSIONS=[".xml", ".json"]

# ML Configuration
CONFIDENCE_THRESHOLD=0.7
USE_PAT_MODEL=false

# Background Tasks
TASK_TIMEOUT=300  # 5 minutes
MAX_RETRIES=3

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FORMAT=json  # json or text

# Clinical Thresholds (0.0 - 1.0)
DEPRESSION_THRESHOLD=0.5
HYPOMANIC_THRESHOLD=0.3
MANIC_THRESHOLD=0.3