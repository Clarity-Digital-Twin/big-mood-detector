# ==============================================================================
# BIG MOOD DETECTOR - ENVIRONMENT CONFIGURATION
# ==============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control!

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=your-super-secret-key-change-this-in-production

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
ENABLE_CORS=true
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/big_mood_detector
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# ML Model Configuration
ML_MODEL_PATH=./models/
XGBOOST_MODEL_PATH=./reference_repos/mood_ml/
PAT_MODEL_PATH=./reference_repos/Pretrained-Actigraphy-Transformer/model_weights/
TSFRESH_CACHE_ENABLED=true

# Apple HealthKit Processing
HEALTHKIT_DATA_PATH=./data/healthkit/
MAX_UPLOAD_SIZE_MB=50
SUPPORTED_FILE_TYPES=["json", "xml"]

# Security & Authentication
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Clinical Data Privacy (HIPAA Compliance)
ENABLE_DATA_ENCRYPTION=true
DATA_RETENTION_DAYS=2555  # 7 years for clinical data
AUDIT_LOG_ENABLED=true
PHI_ANONYMIZATION=true

# Monitoring & Observability
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

# External APIs
OPENAI_API_KEY=sk-your-openai-key
FHIR_SERVER_URL=https://your-fhir-server.com/R4
FHIR_CLIENT_ID=your-fhir-client-id
FHIR_CLIENT_SECRET=your-fhir-secret

# Development Tools
ENABLE_PROFILING=false
ENABLE_DEBUG_TOOLBAR=false
PYTEST_PARALLEL_WORKERS=auto

# Cloud Storage (Optional)
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_BUCKET_NAME=big-mood-detector-data
AWS_REGION=us-east-1

# Docker Configuration
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE_TAG=latest 